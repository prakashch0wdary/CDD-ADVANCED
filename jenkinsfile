pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }

        stage('Compile') {
            steps {
                echo 'Compiling Java program...'
                bat 'javac SampleProgram.java'
            }
        }

        stage('Run') {
            steps {
                echo 'Running Java program...'
                bat 'java -cp SampleProgram.java'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
