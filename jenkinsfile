pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // If your code is in SCM, you can use checkout, 
                // otherwise just skip this for local workspace
                checkout scm
            }
        }

        stage('Compile') {
            steps {
                // Compile Java file
                sh 'javac SampleProgram.java'
            }
        }

        stage('Run') {
            steps {
                // Run the compiled Java program
                sh 'java SampleProgram'
            }
        }
    }

    post {
        always {
            echo 'Build finished.'
        }
    }
}
