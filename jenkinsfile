pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // If using SCM, uncomment the next line
                // checkout scm
                echo 'Checking out source code...'
            }
        }

        stage('Compile') {
            steps {
                echo 'Compiling Java program...'
                sh 'javac SampleProgram.java'
            }
        }

        stage('Run') {
            steps {
                echo 'Running Java program...'
                sh 'java SampleProgram'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
